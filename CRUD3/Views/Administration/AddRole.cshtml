@model CRUD3.Models.Account.RoleViewModel

@{
    ViewData["Title"] = "AddRole";
}

<h4>Create New Role</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Administration" asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger">a</div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Create Role" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Administration" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to Administration</a>
                </div>
            </div>
        </form>
    </div>
</div>

